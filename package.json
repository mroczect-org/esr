{
  "name": "esr-cli",
  "version": "0.0.1",
  "description": "Cross-platform script manager for sharing, publishing, and running executable scripts.",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "esr": "dist/index.js"
  },
  "scripts": {
    "dev": "ts-node --project tsconfig.json",
    "build": "rm -rf dist && tsc && tsc-alias && chmod +x dist/index.js",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write .",
    "prepare": "husky install",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mroczect-org/esr.git"
  },
  "keywords": [
    "cli",
    "shell",
    "script-manager",
    "cross-platform",
    "automation",
    "developer-tools",
    "registry"
  ],
  "author": "mroczect.org",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mroczect-org/esr/issues"
  },
  "homepage": "https://github.com/mroczect-org/esr#readme",
  "dependencies": {
    "clipboardy": "^4.0.0",
    "commander": "^14.0.1",
    "inquirer": "^12.9.6",
    "node-forge": "^1.3.1",
    "openpgp": "^6.2.2",
    "prompts": "^2.4.2",
    "ssh-keygen-lite": "^1.3.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@types/inquirer": "^9.0.9",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.8.0",
    "@types/node-forge": "^1.3.14",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.5.2",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.44.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,json,md}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
