{
  "compilerOptions": {
    "rootDir": "./cli",
    "outDir": "./dist",
    "module": "NodeNext",
    "target": "ES2020",
    "types": ["node"],
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noImplicitOverride": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noPropertyAccessFromIndexSignature": true,
    "strict": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "pretty": true,
    "moduleResolution": "NodeNext"
  }
}
